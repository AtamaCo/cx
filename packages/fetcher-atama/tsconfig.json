{
  "compilerOptions": {
    "strict": true,
    "target": "es2020",
    "module": "ES2022",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "es2015"
    ],
    "outDir": "./dist",
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "watchOptions": {
    "watchFile": "useFsEvents",
    "watchDirectory": "useFsEvents",
    "fallbackPolling": "dynamicPriority",
    "synchronousWatchDirectory": true,
    "excludeDirectories": ["**/node_modules", "dist"]
  }
}
